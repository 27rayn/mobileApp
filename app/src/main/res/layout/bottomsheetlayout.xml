<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bottomsheet">

    <TextView
        android:id="@+id/TVbottomsheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_medium"
        android:text="Barcode Input Method"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/closebottomsheet"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:background="@drawable/ic_clear"
        app:layout_constraintBottom_toBottomOf="@+id/TVbottomsheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TVbottomsheet"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BTNgeneratebarcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVbottomsheet"
        android:layout_marginTop="24dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Generate Barcode"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_bolt"
        android:drawableEnd="@drawable/ic_cheveron_right"
        android:drawablePadding="16dp"
        />

    <Button
        android:id="@+id/BTNmanualinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/BTNgeneratebarcode"
        android:layout_marginTop="16dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Manual Input"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:drawableStart="@drawable/ic_create"
        android:drawableEnd="@drawable/ic_cheveron_right"
        android:drawablePadding="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TVstockinpopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Input stock in quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        />

    <TextView
        android:id="@+id/TVitemsnamepopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/TVstockinpopup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Nama Items"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        android:textSize="16sp"
        />

    <EditText
        android:id="@+id/inputstockquantity"
        android:layout_width="240dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toBottomOf="@id/TVitemsnamepopup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white"
        android:hint="input your stock in quantity"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:inputType="number"
        />


